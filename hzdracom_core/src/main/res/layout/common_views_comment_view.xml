<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comment_view_hight"
    android:background="@drawable/comment_view_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <ImageView
        android:id="@+id/comment_view_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="12dp"
        android:scaleType="center"
        android:src="@drawable/emoji_icon"
        android:visibility="gone" />

    <Button
        android:id="@+id/comment_view_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:textColor="@color/comment_tv_color"
        android:textSize="@dimen/comment_view_commit_btn_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/comment_view_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_view_hight"
        android:layout_toLeftOf="@id/comment_view_commit"
        android:layout_toRightOf="@id/comment_view_emoji"
        android:background="@drawable/comment_content_bg"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColorHint="@color/comment_tv_color"
        android:textSize="@dimen/font_size_small" />

</RelativeLayout>